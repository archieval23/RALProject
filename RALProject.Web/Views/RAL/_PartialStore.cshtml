@model IEnumerable<RALProject.Web.ViewModels.StoreModel>

<table class="table table-hover table-sm" style="width: 100%;" id="idstoredataTable">
    <thead class="thead-light">
        <tr>
            <th style="display:none;">ID</th>
            <th>Store</th>
            <th>Region</th>
            <th>District</th>
            <th>Description</th>
            <th>Manager</th>
            <th width="10%" align="center" style="text-align:center;">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td style="display: none;">@item.id</td>
                    <td>@item.store</td>
                    <td>@item.region</td>
                    <td>@item.district</td>
                    <td>@item.description</td>
                    <td>@item.manager</td>
                    <td style="text-align:center;">
                        <a href="javacript:;" id="id-select-store" class="clsselectstore" data-name="edit" data-toggle="tooltip" title="Select Details"><i class="fa fa-eye text text-muted"></i></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>No projects found. </td>
            </tr>
        }
    </tbody>
</table>

@Scripts.Render("~/Scripts/RALProject/RALModal.js")